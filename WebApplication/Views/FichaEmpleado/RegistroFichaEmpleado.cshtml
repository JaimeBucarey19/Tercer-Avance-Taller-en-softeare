@model IEnumerable<WebApplication.Modules.FichaEmpleado.FichaEmpleado>

@{
    ViewBag.Title = "Listado De Empleados";
    Layout = "~/Views/Shared/_Base.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="container table-responsive">
        <div class="row">
            <div class="ibox-content">
                <div class="col-sm-2">
                    <a href="https://localhost:44394/MenuRegistro/MenuRegistro" style="background-color:mediumseagreen" class="btn btn-block btn-success">Volver al Menu</a>
                    <br />
                </div>

                <div>
                    <input class="form-control" id="myInput" type="text" placeholder="Search..">
                    <p>Filtre por algun parametro</p>
                </div>
                <br />
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Rut)</th>
                            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                            <th>@Html.DisplayNameFor(model => model.Apellido)</th>
                            <th>@Html.DisplayNameFor(model => model.Direccion) </th>
                            <th>@Html.DisplayNameFor(model => model.Email)</th>
                            <th>@Html.DisplayNameFor(model => model.Telefono)</th>
                            <th>@Html.DisplayNameFor(model => model.Edad)</th>
                            <th>@Html.DisplayNameFor(model => model.Rol)</th>

                        </tr>
                    </thead>
                    <tbody id="myTable">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Rut)</td>
                                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                                <td>@Html.DisplayFor(modelItem => item.Apellido)</td>
                                <td>@Html.DisplayFor(modelItem => item.Direccion)</td>
                                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                                <td>@Html.DisplayFor(modelItem => item.Edad)</td>
                                <td>@Html.DisplayFor(modelItem => item.Rol)</td>
                                <td>
                                    @Html.ActionLink("Ediar", "Editar", new { id = item.Id },new { @class = "btn btn-success"}) |
                                    
                                    @Html.ActionLink("Eliminar", "Eliminar", new { id = item.Id },new { @class = "btn btn-danger"})
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>


