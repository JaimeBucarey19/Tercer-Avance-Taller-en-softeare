@model IEnumerable<WebApplication.Modules.DetallePedido.DetallePedido>

@{
    ViewBag.Title = "Listado De Facturas";
    Layout = "~/Views/Shared/_Base.cshtml";
}


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="container table-responsive">
        <div class="row">
            <div class="ibox-content">
                <div class="col-sm-2">
                    <a href="https://localhost:44394/MenuRegistro/MenuRegistro" style="background-color:mediumseagreen" class="btn btn-block btn-success">Volver al Menu</a>
                    <br />
                </div>

                <div>
                    <input class="form-control" id="myInput" type="text" placeholder="Search..">
                    <p>Filtre por algun parametro</p>
                </div>
                <br />
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.PuntoSalida)</th>
                            <th>@Html.DisplayNameFor(model => model.PuntoLlegada)</th>
                            <th>@Html.DisplayNameFor(model => model.Kilometros)</th>
                            <th>@Html.DisplayNameFor(model => model.PrecioKilometro)</th>
                            <th>@Html.DisplayNameFor(model => model.CabinasDePeaje) </th>
                            <th>@Html.DisplayNameFor(model => model.Descuento)</th>
                            <th>@Html.DisplayNameFor(model => model.Iva)</th>
                            <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
                            <th>@Html.DisplayNameFor(model => model.ValorTotal)</th>


                        </tr>
                    </thead>
                    <tbody id="myTable">
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.PuntoSalida)</td>
                            <td>@Html.DisplayFor(modelItem => item.PuntoLlegada)</td>
                            <td>@Html.DisplayFor(modelItem => item.Kilometros)</td>
                            <td>@Html.DisplayFor(modelItem => item.PrecioKilometro)</td>
                            <td>@Html.DisplayFor(modelItem => item.CabinasDePeaje)</td>
                            <td>@Html.DisplayFor(modelItem => item.Descuento)</td>
                            <td>@Html.DisplayFor(modelItem => item.Iva)</td>
                            <td>@Html.DisplayFor(modelItem => item.Descuento)</td>
                            <td>@Html.DisplayFor(modelItem => item.ValorTotal)</td>
                            <td>

                                @Html.ActionLink("Editar", "Editar", new { id = item.Id }, new { @class = "btn btn-success" })
                                @Html.ActionLink("Eliminar", "Eliminar", new { id = item.Id }, new { @class = "btn btn-danger" })
                                @Html.ActionLink("Detalles", "Detalles", new { id = item.Id }, new { @class = "btn btn-info" })
                                @Html.ActionLink("Agregar Detalle", "Agregar Detalle", new { id = item.Id }, new { @class = "btn btn-info" })
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>