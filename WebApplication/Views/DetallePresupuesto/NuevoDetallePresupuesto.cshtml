<div id="contenedor_producto" class="class_contenedor_producto" style="display: none">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title" id="2">
                    <h5>Detalle de Pedido </h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="row">
                        <div class="col-lg-12">
                            <div>
                                <button class="btn btn-danger btn-circle class_del_item" type="button"><i class="fa fa-minus"></i></button>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">ID Presupuesto</label>
                                <div class="col-sm-10">
