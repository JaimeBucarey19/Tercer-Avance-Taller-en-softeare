                            </div>
                            <div class="form-group ">
                                <label class="col-sm-2 control-label">Precio</label>
                                <div class="col-sm-10">
                                    <input id="id_precio" type="text" value="" placeholder="Precio" class="form-control class_precio" name="id_precio" maxlength="200">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-2 control-label">Cantidad</label>
                                <div class="col-sm-10">
                                    <input id="id_cantidad" type="text" value="" placeholder="Cantidad" class="form-control class_cantidad" name="id_cantidad" maxlength="200">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Forma De Pago</label>
                                <div class="col-sm-10">
                                    <input id="id_formaDePago" type="text" value="" placeholder="FormaDePago" class="form-control class_formaDePago" name="id_formaDePago" maxlength="200">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Iva</label>
                                <div class="col-sm-10">
                                    <input id="id_iva" type="text" value="" placeholder="Iva" class="form-control class_iva" name="id_iva" maxlength="200">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Descuento</label>
                                <div class="col-sm-10">
                                    <input id="id_descuento" type="text" value="" placeholder="Descuento" class="form-control class_descuento" name="id_descuento" maxlength="200">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-2 control-label">Total</label>
                                <div class="col-sm-10">
                                    <input id="id_total" type="text" value="" placeholder=" Total" class="form-control class_total" name="id_total" maxlength="200">
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-2 control-label">Descripcion</label>
                                <div class="col-sm-10">
                                    <input id="id_descripcion" type="text" value="" placeholder="Descripcion" class="form-control class_descripcion" name="id_descripcion" maxlength="200">
                                </div>
                            </div>

           

                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        let detalle = 1;
        function formatNumber(n) {
            n = String(n).replace(/\D/g, "");
            return n === '' ? n : Number(n).toLocaleString("es-CL", {
                style: "currency",
                currency: "CLP",
                currencyDisplay: 'symbol',
                minimumFractionDigits: 0,
            });
        }
        $(".class_add_item").on("click", function () {
            var contenedor_producto = $("#contenedor_producto").clone();
            contenedor_producto.attr("id", "contenedor_producto_" + detalle).css("display", "block");

            $("#contenedor_detalle").append(contenedor_producto);
            detalle += 1;

        });
        $(document).on("click", ".class_del_item", function () {
            $("#2").parent().parent().remove();
            detalle -= 1;

        });
        $(document).ready(function () {
            $('#id_presupuesto').val(@Html.ViewBag.PresupuestoId);
            $('#id_presupuesto').attr('disabled', 'disabled');
        });


        $('#guardar').click(function () {

             if (detalle == 1) {
                    alert("Debe contener un detalle");
                    return;
                }

            let DetallePresupuesto = [];
            $('#contenedor_detalle .class_contenedor_producto').each(function () {
                var detalle = [];
                detalle["PresupuestoId"] = $(this).find('.class_id_presupuesto').val();
                detalle["Precio"] = $(this).find('.class_precio').val();
                detalle["Cantidad"] = $(this).find('.class_cantidad').val();
                detalle["FormaDePago"] = $(this).find('.class_formaDePago').val();
                detalle["Iva"] = $(this).find('.class_iva').val();
                detalle["Descuento"] = $(this).find('.class_descuento').val();
                detalle["Total"] = $(this).find('.class_total').val();
                detalle["Descripcion"] = $(this).find('.class_descripcion').val();


                DetallePresupuesto.push({
                    "PresupuestoId": detalle["PresupuestoId"],
                    "Precio": detalle["Precio"],
                    "Cantidad": detalle["Cantidad"],
                    "FormaDePago": detalle["FormaDePago"],
                    "Iva": detalle["Iva"],
                    "Descuento": detalle["Descuento"],
                    "Total": detalle["Total"],
                    "Descripcion": detalle["Descripcion"],

                });
            });
            var formData = new FormData();
            formData.append("DetallePresupuesto", JSON.stringify(DetallePresupuesto));
            $.ajax({
                type: "POST",
                url: '@Url.Action("SaveOrder", "DetallePresupuesto")',
                dataType: 'json',
                data: formData,

                cache: false,
                    contentType: false,
                    processData: false,  // Important!
                    success: function (result) {
                        swal({ title: result.Mensajes.titulo, text: result.Mensajes.msg, type: result.Mensajes.tipo });
                                $('.confirm').click(function () {
                                    location.href = result.redirectUrl;
                                });
                                return
                    },
                    error: function (result){
                        swal({ title: result.Mensajes.titulo, text: result.Mensajes.msg, type: result.Mensajes.tipo });
                    }
                });

            });

    });
        // Recopilar lista de pedidos múltiples para pasar al controlador

</script>


